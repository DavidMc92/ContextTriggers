<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:ignore="MergeRootFrame">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Mode:"
            android:textSize="24dp"
            android:id="@+id/textView1"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testModeSwitch"
            android:layout_alignTop="@+id/textView1"
            android:layout_toEndOf="@+id/textView1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conversion steps to meters:"
            android:textSize="18sp"
            android:id="@+id/textView2"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/edittextDate"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Default 1 step to 0.762 meters"
            android:textSize="12dp"
            android:id="@+id/textView3"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/textView2"/>

        <EditText
            android:id="@+id/edittext"
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.762"
            android:gravity="center"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginRight="10sp"
            android:layout_alignBottom="@id/textView2"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_box_style"
            android:imeOptions="actionDone"
            android:layout_weight="0.5"/>

        <EditText
            android:id="@+id/edittextDate"
            android:layout_width="100sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:background="@drawable/edit_box_style"
            android:layout_marginTop="10sp"
            android:layout_centerHorizontal="true"
            android:hint="HERE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals editable"
            android:textSize="24dp"
            android:id="@+id/textView4"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/textView3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="24dp"
            android:id="@+id/textView5"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_below="@+id/textView4"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editSwitch"
            android:layout_alignTop="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notificationsSwitch"
            android:layout_alignTop="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ExpandableListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>